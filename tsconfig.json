{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "./src",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@api/*": ["api/*"],
            "@modules/*": ["modules/*"],
            "@assets/*": ["assets/*"],
            "@class/*": ["class/*"],
            "@components/*": ["components/*"],
            "@config/*": ["config/*"],
            "@const/*": ["const/*"],
            "@helpers/*": ["helpers/*"],
            "@hoc/*": ["hoc/*"],
            "@hooks/*": ["hooks/*"],
            "@layouts/*": ["layouts/*"],
            "@lib/*": ["lib/*"],
            "@pages/*": ["pages/*"],
            "@redux/*": ["redux/*"],
            "@services/*": ["services/*"],
            "@styles/*": ["styles/*"],
            "@type/*": ["types/*"],
            "@utils/*": ["utils/*"]
        },
        "incremental": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
